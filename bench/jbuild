(executables
 ((names (main))
  (libraries (radis astring benchmark digestif.c))
  (flags (:standard -w +a-4-42-44-48-50-58-32-60@8 -safe-string -color always))
  (ocamlopt_flags (:standard -O3 -color always
                   -unbox-closures -unbox-closures-factor 20))
))

(alias
 ((name runbench)
  (deps (main.exe))
  (action (run ${<}))))
